<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/AbsoluteGreen</item>
        <item name="colorPrimaryDark">@color/AvocadoGreen</item>
        <item name="colorAccent">@color/CaribbeanGreen</item>
        <item name="android:colorBackground">@color/SkyBlue</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
    </style>

</resources>
